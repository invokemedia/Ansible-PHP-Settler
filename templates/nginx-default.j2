server {
    listen 80 {{ settler_nginx_default_server }};
    listen [::]:80 {{ settler_nginx_default_server }} ipv6only=on;

    {% if settler_nginx_server_name is defined %}
    server_name {{ settler_nginx_server_name }};
    {% endif %}

    {% if vhost.root is defined %}
    root {{ settler_nginx_site_folder_root }}/public;
    {% endif %}

    index index.php index.html index.htm;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        try_files $uri /index.php =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php7.0-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}